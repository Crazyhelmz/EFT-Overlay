             xmlns:local="clr-namespace:TarkovToolBox" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Exit="Application_Exit" Startup="App_Startup" SessionEnding="Application_SessionEnding_1" >
